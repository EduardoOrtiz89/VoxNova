<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#80000000">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="16dp"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal"
        android:background="@android:color/white">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_mic"
            android:layout_marginBottom="16dp" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/txtStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Escuchando..."
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="8dp" />

        <!-- Transcript/Response -->
        <TextView
            android:id="@+id/txtTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"
            android:textColor="#666666"
            android:maxLines="6"
            android:minHeight="48dp" />

        <!-- Commands Panel (hidden by default) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/commandsScrollView">
            
            <LinearLayout
                android:id="@+id/commandsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />
        </ScrollView>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- Quick Commands Button -->
            <Button
                android:id="@+id/btnQuickCommands"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš¡"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <!-- New Session Button -->
            <Button
                android:id="@+id/btnNewSession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ”„"
                android:textSize="18sp"
                android:layout_marginEnd="8dp" />

            <!-- Cancel Button -->
            <Button
                android:id="@+id/btnCancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âœ•"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
