<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/overlay_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="@dimen/panel_margin"
        android:orientation="vertical"
        android:padding="@dimen/panel_padding"
        android:gravity="center_horizontal"
        android:background="@drawable/bg_panel_rounded"
        android:elevation="@dimen/panel_elevation">

        <!-- Status Icon -->
        <ImageView
            android:id="@+id/statusIcon"
            android:layout_width="@dimen/status_icon_size"
            android:layout_height="@dimen/status_icon_size"
            android:src="@drawable/ic_status_listening"
            android:layout_marginBottom="@dimen/status_icon_margin_bottom"
            app:tint="@color/listening_color" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/txtStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/listening"
            android:textSize="@dimen/status_text_size"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <!-- Transcript/Response with ScrollView -->
        <ScrollView
            android:id="@+id/transcriptScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:fadeScrollbars="true">

            <TextView
                android:id="@+id/txtTranscript"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/transcript_text_size"
                android:textColor="@color/text_secondary"
                android:minHeight="@dimen/transcript_min_height" />
        </ScrollView>

        <!-- Commands Panel (hidden by default) -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/commands_panel_height"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:id="@+id/commandsScrollView">

            <LinearLayout
                android:id="@+id/commandsPanel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone" />
        </ScrollView>

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="16dp"
            android:gravity="center">

            <!-- Quick Commands Button -->
            <ImageButton
                android:id="@+id/btnQuickCommands"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_marginEnd="@dimen/button_margin"
                android:src="@drawable/ic_btn_commands"
                android:background="@drawable/bg_button_rounded"
                android:padding="12dp"
                android:contentDescription="@string/commands"
                app:tint="@color/text_primary" />

            <!-- New Session Button -->
            <ImageButton
                android:id="@+id/btnNewSession"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:layout_marginEnd="@dimen/button_margin"
                android:src="@drawable/ic_btn_refresh"
                android:background="@drawable/bg_button_rounded"
                android:padding="12dp"
                android:contentDescription="@string/new_session"
                app:tint="@color/text_primary" />

            <!-- Cancel Button -->
            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_width="@dimen/button_size"
                android:layout_height="@dimen/button_size"
                android:src="@drawable/ic_btn_close"
                android:background="@drawable/bg_button_rounded"
                android:padding="12dp"
                android:contentDescription="@string/cancel"
                app:tint="@color/text_primary" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>
